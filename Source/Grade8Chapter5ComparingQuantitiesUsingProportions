        self.play(Write(t1))
        self.wait(1)
        t3= Text(" Example :Ganapati went to a medical shop to buy medicines for his mother.Bill amount was 372.18. ",font_size=22)
        t3.move_to([-0.3,1.2, 0])
        self.play(Write(t3))
        self.wait(0.5)
        t33= Text(" It contains 5% VAT.Find the bill amount before VAT was added.",font_size=22)
        t33.move_to([-2.3,0.5, 0])
        self.play(Write(t33))
        self.wait(1)
        t4= Text(" Solution :Given amount = 372.18, VAT = 5%.",font_size=22)
        t4.move_to([-4.1,-0.2, 0])
        self.play(Write(t4))
        self.wait(1)
        t5= Text(" VAT charged = 5%  of  372.18=17.72 ",font_size=22)
