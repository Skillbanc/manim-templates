    def compoundinterest(self):
        self.colorChoice=[RED,BLUE,GREEN,PURPLE]
        self.isRandom = False
        self.angleChoice=[TAU/2,TAU/5,TAU/5]
        p3 = cvo.CVO().CreateCVO("Compound Interest", "").setPosition([-5,2.4,0])
        p4 = cvo.CVO().CreateCVO("Formula", "Amount - Principal").setPosition([-3,-2,0])
        p5 = cvo.CVO().CreateCVO("Amount(Annually)", "$p(1 + r/100)^t$").setPosition([5,-2,0])
        p9 = cvo.CVO().CreateCVO("Amount(Half yearly)", "$p(1 + (r/2)/100)^{2t}$").setPosition([4,1.9,0])
        p3.cvolist.append(p4)
        p4.cvolist.append(p5)
        p4.cvolist.append(p9)
        self.setNumberOfCirclePositions(4)
        p4.setcircleradius(2)
        p9.setcircleradius(2)
        # self.setNumberOfAngleChoices(9)
        self.construct1(p3,p3)
        self.wait(1)
        
    def exampleci(self):
        t= Text(" Example : ",font_size=30,color=PINK)
        t.move_to([0,3, 0])
        self.play(Write(t))
        t1= Text(" What  will  be  the  amount  and  compound interest, if  5000  is  invested  at  8%  per annum  2 years? ",font_size=20)
        t1.move_to([-1,2, 0])
        self.play(Write(t1))
        self.wait(1)
        t2= MathTex(r" \text{Solution} : Given ,  Principal = 5000; Rate = 8%  and  Time(n or t) = 2 years ",font_size=30)
        t2.move_to([-3.5,1.3, 0])
        self.play(Write(t2))
        self.wait(1)
        t3= MathTex(r" \text{Amount}  = p(1 + r/100)^t ",font_size=30)
        t3.move_to([-4.7,0.5, 0])
        self.play(Write(t3))
        self.wait(1)
        t4= MathTex(" = 5000(1 + 8/100)^2 = 5832 ",font_size=30)
        t4.move_to([-3.2,-0.3, 0])
        self.play(Write(t4))
        self.wait(1)
        t5= MathTex(r" \text{Interest earned}= Amount – Principal ",font_size=30)
        t5.move_to([-4.2,-1, 0])
        self.play(Write(t5))
        self.wait(1)
        t0= MathTex("= 5832 - 5000 = 832 ",font_size=30)
        t0.move_to([-3.2,-1.7, 0])
        self.play(Write(t0))
        self.wait(2)

    def application(self):
        self.isRandom=False
        self.angleChoice=[TAU/5, TAU/5]
        self.colorChoice=[BLUE,BLUE_A]
        p2=cvo.CVO().CreateCVO("Compound Interest","").setPosition([-4,0,0])
        p3=cvo.CVO().CreateCVO("Applications","").setPosition([1.8,0,0])
        p3onamelist=["Increase (or decrease) in population","The growth of bacteria if the rate of growth is known etc"]
        p2.cvolist.append(p3)
        p3.extendOname(p3onamelist)
        self.setNumberOfCirclePositions(2)
        p3.setcircleradius(2)  
        # self.setNumberOfAngleChoices(5)
        self.construct1(p2,p2) 
        self.wait(1)
